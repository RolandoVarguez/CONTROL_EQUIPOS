@model IEnumerable<ControlEquipos.Web.Models.Player>

@{
    ViewBag.Title = "Index";
}


    <div class="row">

        @foreach (var item in Model)
        {
            <center>
                <div class="col-xl-3 col-md-3 mb-4 m-3">
                <div class="card border-bottom-dark shadow  border-left-dark shadow h-100 py-2 "style="width: 20rem">
                    <div class="card-header bg-danger"></div>
                    <div class="card-body" >

                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <center>
                                    <img src="@Url.Action("getImage","Players", new {Id = item.Id })" width="270" height="200" />

                                </center>
                                <br />
                                    <div class="text-xs  text-lg-left mb-1"><b>Nombre:</b> @item.PlayerName @item.PlayerLastName</div>
                                    <div class="text-xs   text-lg-left mb-1"><b>Equipo:</b> @item.Team.TeamName</div>
                                    <div class="text-xs    text-lg-left mb-1"><b>Posicion:</b> @item.Position</div>
                            </div>
                            <br />
                        </div>
                        <center class="m-2">
                            @Html.ActionLink("Consultar", "Details", new { id = item.Id }, new { @class = "btn btn-block btn-outline-dark" })
                        </center>
                    </div>
                    <div class="card-header bg-danger"></div>

                </div>
         </div>
            </center>
            
        }
     </div>

  