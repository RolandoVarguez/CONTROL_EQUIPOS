@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <b>@Html.ActionLink(User.Identity.GetUserName() + "", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "text-white" })</b>
        </li>
        &nbsp;&nbsp;&nbsp;
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="text-white"><b>Cerrar Sesion</b></a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><b>@Html.ActionLink("Iniciar Sesion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "text-white" })</b></li>
</ul>
}
